<h1>{{title}}</h1>
<form method="POST" action="/new" class="new-message_form">
    <div class="form-group">
    <label for="messageUser">Name</label>
        <input type="text" name="messageUser" required>

    </div>
    <div class="form-group">
        <label for="messageText">Message</label>
        <textarea type="text" name="messageText" rows="10" required></textarea>

    </div>
    
    <div class="form-group submit_form-group">
        <input type="submit" class="submit-btn">
    </div>

</form>